{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es6",
      "es2017.object"
    ],
    "jsx": "preserve",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
